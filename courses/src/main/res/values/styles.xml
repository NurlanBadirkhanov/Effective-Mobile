<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeRounded16">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeRounded16Top">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="TextCourseTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextCourseSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">#A8B0B8</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCoursePrice" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextCourseMore" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">#18A957</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextCourseChip" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">#EDEFF2</item>
