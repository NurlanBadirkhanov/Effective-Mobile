<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#171A1E"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp"
    app:shapeAppearanceOverlay="@style/ShapeRounded16"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivThumb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:shapeAppearanceOverlay="@style/ShapeRounded16Top" />

        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_icon_circle"
            android:padding="8dp"
            android:tint="#EDEFF2"
            android:src="@drawable/outline_bookmark_24"
            app:layout_constraintTop_toTopOf="@id/ivThumb"
            app:layout_constraintEnd_toEndOf="@id/ivThumb"/>

        <LinearLayout
            android:id="@+id/chipRating"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_chip"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp"
            app:layout_constraintBottom_toBottomOf="@id/ivThumb"
            app:layout_constraintStart_toStartOf="@id/ivThumb">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:tint="#1F9E51"
                android:src="@drawable/baseline_star_outline_24"/>

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="4.9"
                android:textColor="#EDEFF2"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_chip"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="22 Мая 2024"
            android:textColor="#EDEFF2"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/chipRating"
            app:layout_constraintBottom_toBottomOf="@id/ivThumb"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Java-разработчик с нуля"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ivThumb"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Освойте backend-разработку и программирование на Java, фреймворки…"
            android:textColor="#A8B0B8"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="999 ₽"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvText"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="Подробнее →"
            android:textColor="#18A957"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvPrice"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
